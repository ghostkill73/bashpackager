declare -- __ROOT_PATH__="$PWD"
declare -- __SETUP_FILE__="${__ROOT_PATH__}/package.json"


# testing package.json
jq '.' 

declare -- __SCRIPT_NAME__="$(jq '.setup.name' package.json)"
declare -- __SCRIPT_VERSION__="$(jq '.setup.version' package.json)"
declare -- __SCRIPT_DESC__="$(jq '.setup.description' package.json)"

#################################################################
# bashpackager
#################################################################

echo "$__SCRIPT_NAME__"
echo "$__SCRIPT_VERSION__"
echo "$__SCRIPT_DESC__"

